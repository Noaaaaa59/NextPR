rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;

      match /workouts/{workoutId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /lifts/{liftId} {
        // Tout utilisateur authentifié peut lire les lifts (pour le leaderboard)
        allow read: if request.auth != null;
        // Le propriétaire peut tout modifier
        allow create, delete: if request.auth != null && request.auth.uid == userId;
        // Permettre au propriétaire de tout modifier, ou à d'autres de modifier seulement les stats de rating
        allow update: if request.auth != null && (
          request.auth.uid == userId ||
          (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['averageRating', 'ratingCount']))
        );

        // Ratings: tout utilisateur authentifié peut noter
        match /ratings/{ratingId} {
          allow read: if request.auth != null;
          // Peut créer une note, ou modifier/supprimer sa propre note
          allow create: if request.auth != null;
          allow update, delete: if request.auth != null && request.auth.uid == resource.data.raterId;
        }
      }

      match /programs/{programId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /draftWorkout/{draftId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    match /programs/{programId} {
      allow read: if true;
      allow write: if false;
    }
  }
}
